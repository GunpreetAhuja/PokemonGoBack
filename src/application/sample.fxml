<Pane fx:id="gameStage" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
   	<VBox fx:id="innergamebox" stylesheets="@style.css">
   		<children>
         	<ScrollPane fitToHeight="true" fitToWidth="true" vbarPolicy="NEVER">
            	<content>
            		<HBox fx:id="AIHand" />
            	</content>
         	</ScrollPane>
         	<BorderPane fx:id="gameBoard">
         		<top>
               		<HBox fx:id="AIBench" stylesheets="@style.css" BorderPane.alignment="CENTER" />
            	</top>
        	    <center>
            	   <Pane fx:id="PlayArea" stylesheets="@style.css" BorderPane.alignment="TOP_CENTER">
                	  <children>
                    	<HBox fx:id="aiActivePokemon" alignment="TOP_CENTER" layoutX="121.0" layoutY="132.0" prefHeight="70.0" prefWidth="52.0" stylesheets="@style.css">
                  
						</HBox>
                    	<HBox fx:id="userActivePokemon" alignment="CENTER" layoutX="121.0" layoutY="35.0" prefHeight="70.0" prefWidth="52.0" stylesheets="@style.css">
                  
		                </HBox>
                     	<Label fx:id="aiDamage" layoutX="36.0" layoutY="21.0" prefHeight="21.0" prefWidth="37.0" />
                     	<Label fx:id="userDamage" prefHeight="21.0" prefWidth="37.0" BorderPane.alignment="CENTER" />
	                  </children>
              		</Pane>
             	</center>
               	<left>
               		<VBox>
                 	 <children>
   	               		<Label fx:id="AIDiscardPile" text="Disc..." textFill="#ee0303" />
               	    	<Label fx:id="AIDeck" contentDisplay="TOP" text="AIDeck" textAlignment="CENTER" textFill="#ee0303" />
                   	    <Label fx:id="UserRewardCards" text="Rew.." textFill="#f80000" />
                  		<Button fx:id="UserEndTurnBtn" layoutY="230.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="65.0" text="Done" textFill="#ff0303" />
   	               		
                 	 </children>
               		</VBox>
               	</left>
               	<right>
               		<VBox>
                 	 <children>
                 	 	<Label fx:id="AIRewardCards" contentDisplay="TOP" text="Rew.." textAlignment="CENTER" textFill="#ee0303" />
          				<Label fx:id="UserDeck" text="Deck" textFill="#f80000" />
          				<Label fx:id="UserDiscardPile" text="Disc" textFill="#f80000" />
              	     </children>
        			</VBox>       
               	</right>
	            <bottom>
    	           <HBox fx:id="userBench" stylesheets="@style.css" BorderPane.alignment="CENTER" />
        	    </bottom>
               <VBox.margin>
                  <Insets left="100.0" right="100.0" />
               </VBox.margin>
            </BorderPane>
         	<ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" layoutX="21.0" layoutY="516.0" prefHeight="98.0" prefWidth="626.0" vbarPolicy="NEVER">
           		<content>
            	   	<HBox fx:id="userHand" minWidth="628.0" prefHeight="95.0" prefWidth="717.0" />
            	</content>
         	</ScrollPane>
   		</children>
      </VBox>
   </children>
</Pane>
